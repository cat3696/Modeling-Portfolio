extends layout

block content
 
  form(method='POST', action='/comment/edit/'+comment._id)
    .form-group
      label Author:
      input.form-control(name='author', type='text', value=comment.author)
    .form-group
      label Body:
      textarea.form-control(name='body')= comment.body
    br
    input.btn.btn-primary(type='submit', value='Submit')