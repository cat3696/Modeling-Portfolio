extends layout.pug

block content 

    //div(class="jumbotron") 
        p Put modeling port slideshow here and a list of accomplishments/publications/work history.
    div(id="myCarousel" class="carousel slide width:100% max-width: 400px" data-ride="carousel")
        ol(class="carousel-indicators")
            li(data-target="#myCarousel" data-slide-to="0" class="active")
            li(data-target="#myCarousel" data-slide-to="1")
            li(data-target="#myCarousel" data-slide-to="2")
            li(data-target="#myCarousel" data-slide-to="3")
            li(data-target="#myCarousel" data-slide-to="4")
            li(data-target="#myCarousel" data-slide-to="5")
            li(data-target="#myCarousel" data-slide-to="6")

        div(class="carousel-inner" )

            div(class="carousel-item active")
                div(class = "img1")
                    img(class="d-block w-100" src="/images/DGMP_RS.jpg" alt="Girl with flowers")
                    div(class="carousel-caption")
                        h3 Photographer
                        p D Guy maynard
            
            div(class="carousel-item")
                div(class = "img2")
                    img(class="d-block w-100" src="/images/Geneva_RS.jpg" alt="Girl by window")
                    div(class="carousel-caption")
                        h3 Photographer
                        p Geneva Crowe

        
            div(class="carousel-item")
                div(class="img3")
                    img(class="d-block w-100" src="/images/BrianDeMint_RS.jpg" alt="Girl in paint splatter")
                    div(class="carousel-caption")
                        h3 Photographer
                        p Brian DeMint

        
            div(class="carousel-item")
                div(class = "img4")
                    img(class="d-block w-100" src="/images/TidesofJoy_RS.jpg" alt="Girl with flower hat")
                    div(class="carousel-caption")
                        h3 Photographer
                        p Tides of Joy Photography

        
            div(class="carousel-item")
                div(class = "img5")
                    img(class="d-block w-100" src="/images/Michelle_RS.jpg" alt="Girl in white vest posing")
                    div(class="carousel-caption")
                        h3 Photographer
                        p Michelle Selsenick

        
            div(class="carousel-item")
                div(class="img6")
                    img(class="d-block w-100" src="/images/LaurenSeidel_RS.jpg" alt="Girl holding flowers")
                    div(class="carousel-caption")
                        h3 Photographer
                        p Lauren Seidel

            div(class="carousel-item")
                div(class="img7")
                    img(class="d-block w-100" src="/images/HalMasover_RS.jpg" alt="Wedding couple under St. Louis Arch")
                    div(class="carousel-caption")
                        h3 Photographer
                        p Hal Masover
   
        a(class="carousel-control-prev" href="#myCarousel"  role= "button" data-slide="prev")
            span(class="carousel-control-prev-icon")
            span(class="sr-only") Previous
        
        a(class="carousel-control-next" href="#myCarousel" role= "button" data-slide="next")
            span(class="carousel-control-next-icon")
            span(class="sr-only") Next 