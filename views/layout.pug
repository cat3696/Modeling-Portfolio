        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous")
    body
   
        nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" 
                    aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")
            
            h2(class= "text-white") Caterina Clayton Modeling  

            div(class="navbar-collapse collapse justify-content-between" id="navbarToggler")
                ul(class="navbar-nav mr-auto mt-3 mt-lg-0")
                    if user
                        li(class="nav-item"): a(class="nav-link" href="/") Portfolio
                        span(class="sr-only") 
                        li(class="nav-item"): a(class="nav-link" href="/book") Book
                        span(class="sr-only")
                        li(class="nav-item"): a(class="nav-link" href="/comment/add") Comment
                        span(class="sr-only")
                    else 
                        li(class="nav-item"): a(class="nav-link" href="/") Portfolio
                        span(class="sr-only") 
                        li(class="nav-item"): a(class="nav-link" href="/comment/add") Comment
                        span(class="sr-only")
                ul(class ="navbar-nav")

                    if user
                        li(class="nav-item"): a(class="nav-link" href="/users/logout") Logout
                        span(class="sr-only")                     
                    else 
                        li(class="nav-item"): a(class="nav-link" href="/users/login") Login
                        span(class="sr-only")
                        li(class="nav-item"): a(class="nav-link" href="/users/signup") Signup
                        span(class="sr-only")                   
        .messages
            each type in Object.keys(messages)
                each message in messages[type]
                    div(class="alert alert-"+type) #{message}
        if errors
            each error, i in errors
                div(class='alert alert-danger') #{error.msg}
        block content