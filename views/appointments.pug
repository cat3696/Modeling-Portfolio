extends layout.pug

block content 
    h3 Your Bookings 
    each appointment in appointments
        div(class = "shadow p-3 mb-5 bg-white rounded" style="background:lightgray")
            p #{appointment.genre}
            p #{appointment.payment}
            p #{appointment.location}
            form(action="/appointments" method = "post")
                input(type = "hidden" name= "Id" value= appointment._id)
                input.btn.btn-primary(type='submit', value='Delete Booking')