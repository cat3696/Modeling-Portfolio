extends layout.pug

block content
  
  form.form-signup(method='POST', action='/users/signup')
    .form-group
      label First Name:
      input.form-control(name='first_name', type='text')
    .form-group
      label Last Name:
      input.form-control(name='last_name', type='text')
    .form-group
      label Email:
      input.form-control(name='email', type='text')
    .form-group
      label Username:
      input.form-control(name='username', type='text')
    .form-group
      label Password:
      input.form-control(name='password', type='password')
    .form-group
      label Confirm Password:
      input.form-control(name='password2', type='password')
    br
    input.btn.btn-primary(type='submit', value='Submit')