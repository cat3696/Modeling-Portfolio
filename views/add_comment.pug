extends layout.pug

block content
  
  form.form-comment(method='POST', action='/comment/add')
    .form-group-name
      label Name:
      input.form-control(name='author', type='text')
    .form-group-email
      label Email: 
      input.form-control(name='email', type='text')
    .form-group-comment
      label What would you like me to know?
      textarea.form-control(name='body')
    
    br
    input.btn.btn-primary(type='submit', value='Submit')

    

